{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "users": {
            "type": "object",
            "patternProperties": {
                "^[0-9A-Za-z]{32}$": {
                    "type": "object",
                    "properties": {
                        "fullName": {
                            "type": "string"
                        },
                        "major": {
                            "type": "string"
                        },
                        "minor": {
                            "type": "string"
                        },
                        "universities": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "year": {
                                        "type": "integer"
                                    }
                                },
                                "required": [
                                    "name",
                                    "year"
                                ]
                            }
                        }
                    },
                    "required": [
                        "fullName",
                        "major",
                        "minor",
                        "universities"
                    ]
                }
            }
        },
        "universitiesData": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "localisation": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "advices": {
                        "type": "object",
                        "properties": {
                            "food": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "advisor": {
                                            "type": "string"
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "description": {
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "advisor",
                                        "name",
                                        "description"
                                    ]
                                }
                            },
                            "accomodation": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "advisor": {
                                            "type": "string"
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "description": {
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "advisor",
                                        "name",
                                        "description"
                                    ]
                                }
                            }
                        },
                        "required": [
                            "food",
                            "accomodation"
                        ]
                    }
                },
                "required": [
                    "localisation",
                    "name",
                    "advices"
                ]
            }
        }
    },
    "required": [
        "users",
        "universitiesData"
    ]
}